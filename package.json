{
  "name": "code-release",
  "version": "1.0.2",
  "description": "Release a new version in a GitHub repository",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc --newLine lf",
    "format": "prettier --write \"**/*.ts\"",
    "format-check": "prettier --check \"**/*.ts\"",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --no-cache",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/innofactororg/code-release.git"
  },
  "keywords": [
    "github",
    "actions",
    "release"
  ],
  "author": "Innofactor Plc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/innofactororg/code-release/issues"
  },
  "homepage": "https://github.com/innofactororg/code-release#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/rest": "^20.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^16.18.40",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.46.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-github": "^4.9.2",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "jest-circus": "^29.6.2",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
